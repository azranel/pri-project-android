<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.restauranto.restaurantoapp.activities.ModePickActivity"
    android:background="@drawable/background"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ModePickActivity.description"
        android:paddingBottom="20dp"
        android:textColor="#ffffff" />
    <Button android:id="@+id/ModePickActivity.buttons.waiter"
        android:text="@string/ModePickActivity.buttons.waiter"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ModePickActivity.waiter.description"
        android:paddingBottom="60dp"
        android:textColor="#ffffff" />
    <Button android:id="@+id/ModePickActivity.buttons.kitchen"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/ModePickActivity.buttons.kitchen"
        android:layout_gravity="center_horizontal"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ModePickActivity.kitchen.description"
        android:textColor="#ffffff"
        android:layout_weight="0.13" />

</LinearLayout>
